-- Otomatik Coin Toplama (Direct Remote Trigger, Menü, Şık Tasarım)
local player = game.Players.LocalPlayer
local ReplicatedStorage = game:GetService("ReplicatedStorage")

-- RemoteEvent referansı
local CoinCollected = ReplicatedStorage:WaitForChild("Remotes"):WaitForChild("Gameplay"):WaitForChild("CoinCollected")

-- Menü GUI
local gui = Instance.new("ScreenGui")
gui.Name = "CoinAutoFarmGUI"
gui.Parent = player:WaitForChild("PlayerGui")
gui.ResetOnSpawn = false

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 250, 0, 140)
frame.Position = UDim2.new(0.5, -125, 0.65, 0)
frame.BackgroundTransparency = 0.32
frame.BackgroundColor3 = Color3.fromRGB(60, 90, 180)
frame.BorderSizePixel = 0
frame.Active = true
frame.Draggable = true
frame.Parent = gui

local corner = Instance.new("UICorner",frame)
corner.CornerRadius = UDim.new(0, 18)

local baslik = Instance.new("TextLabel", frame)
baslik.Size = UDim2.new(1,0,0,30)
baslik.Position = UDim2.new(0,0,0,0)
baslik.BackgroundTransparency = 1
baslik.Text = "Coin Toplama Menüsü"
baslik.Font = Enum.Font.GothamBold
baslik.TextSize = 20
baslik.TextColor3 = Color3.fromRGB(255,255,80)

local madeBy = Instance.new("TextLabel", frame)
madeBy.Size = UDim2.new(1,0,0,22)
madeBy.Position = UDim2.new(0,0,1,-24)
madeBy.BackgroundTransparency = 1
madeBy.Text = "made by 847"
madeBy.Font = Enum.Font.GothamBlack
madeBy.TextSize = 18
madeBy.TextStrokeTransparency = 0.5
madeBy.TextColor3 = Color3.fromRGB(255,0,255)

spawn(function()
    while true do
        for h=0,1,0.01 do
            madeBy.TextColor3 = Color3.fromHSV(h,1,1)
            wait(0.015)
        end
    end
end)

local acKapa = Instance.new("TextButton", frame)
acKapa.Size = UDim2.new(0,30,0,30)
acKapa.Position = UDim2.new(1,-35,0,5)
acKapa.BackgroundColor3 = Color3.fromRGB(255,255,255)
acKapa.BackgroundTransparency = 0.15
acKapa.Text = "-"
acKapa.Font = Enum.Font.GothamBold
acKapa.TextColor3 = Color3.fromRGB(60, 90, 180)
acKapa.TextSize = 20
local acKapaCorner = Instance.new("UICorner",acKapa)
acKapaCorner.CornerRadius = UDim.new(1,0)

local menuAcik = true
acKapa.MouseButton1Click:Connect(function()
    menuAcik = not menuAcik
    for _,v in pairs(frame:GetChildren()) do
        if v ~= acKapa and v:IsA("GuiObject") then v.Visible = menuAcik end
    end
    acKapa.Text = menuAcik and "-" or "+"
end)

-- Aç/kapat butonu
local toggle = Instance.new("TextButton", frame)
toggle.Size = UDim2.new(0.8,0,0,40)
toggle.Position = UDim2.new(0.1,0,0.38,0)
toggle.BackgroundColor3 = Color3.fromRGB(80,255,110)
toggle.BackgroundTransparency = 0.08
toggle.Text = "Oto Coin: Kapalı"
toggle.Font = Enum.Font.GothamBold
toggle.TextSize = 20
toggle.TextColor3 = Color3.fromRGB(0,0,0)
local toggleCorner = Instance.new("UICorner",toggle)
toggleCorner.CornerRadius = UDim.new(0,14)

-- Mobil sürükleme desteği
local UIS = game:GetService("UserInputService")
local dragging = false
local dragStart, startPos
frame.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.Touch or input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = frame.Position
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then dragging = false end
        end)
    end
end)
frame.InputChanged:Connect(function(input)
    if dragging and (input.UserInputType == Enum.UserInputType.Touch or input.UserInputType == Enum.UserInputType.MouseMovement) then
        local delta = input.Position - dragStart
        frame.Position = UDim2.new(
            startPos.X.Scale, startPos.X.Offset + delta.X,
            startPos.Y.Scale, startPos.Y.Offset + delta.Y
        )
    end
end)

-- Oto farm mantığı
local aktif = false
toggle.MouseButton1Click:Connect(function()
    aktif = not aktif
    if aktif then
        toggle.Text = "Oto Coin: Açık"
        toggle.BackgroundColor3 = Color3.fromRGB(10, 180, 60)
    else
        toggle.Text = "Oto Coin: Kapalı"
        toggle.BackgroundColor3 = Color3.fromRGB(80,255,110)
    end
end)

spawn(function()
    while true do
        if aktif then
            -- Sunucudan alınan coin verileri ile aynı şekilde tetiklenir
            firesignal(CoinCollected.OnClientEvent, 
                "Coin",
                3,
                40,
                {
                    Value = 1
                }
            )
        end
        wait(0.3)
    end
end)
